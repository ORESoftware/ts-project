{
  "compilerOptions": {
    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "allowUnreachableCode": true,
    "lib": [
      "es2017",
      "es2018",
      "es2019",
      "es2020"
    ]
  },
  "compileOnSave": false,
  "include": [
    "lib"
  ]
}
